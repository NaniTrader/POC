                        <Field>
                            <FieldLabel>@L["SecurityParent"]</FieldLabel>
                            <SelectList TItem="SecurityParent"
                                        TValue="Guid"
                                        Data="@EditingSecurityParentList"
                                        TextField="@((item)=>item.DisplayName)"
                                        ValueField="@((item)=>item.Id)"
